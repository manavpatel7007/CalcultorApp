<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="CalculatorApp.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Application.Resources>
        
        <ResourceDictionary>
    <!-- iPhone-like palette -->
    <Color x:Key="Bg">#000000</Color>
    <Color x:Key="Pad">#000000</Color>
    <Color x:Key="KeyDark">#333333</Color>
    <Color x:Key="Func">#A5A5A5</Color>
    <Color x:Key="Op">#FF9F0A</Color>
    <Color x:Key="OpActive">#FFC34D</Color>
    <Color x:Key="KeyText">#FFFFFF</Color>
    <Color x:Key="FuncText">#000000</Color>


    <!-- Display text -->
    <Style TargetType="Label" x:Key="DisplayText">
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="FontSize" Value="56"/>
        <Setter Property="HorizontalTextAlignment" Value="End"/>
        <Setter Property="LineBreakMode" Value="NoWrap"/>
    </Style>


    <!-- Base key -->
    <Style TargetType="Button" x:Key="BaseKey">
        <Setter Property="CornerRadius" Value="32"/>
        <Setter Property="HeightRequest" Value="72"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup>
                    <VisualState Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="0.85"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>


    <Style TargetType="Button" x:Key="DigitBtn" BasedOn="{StaticResource BaseKey}">
        <Setter Property="BackgroundColor" Value="{StaticResource KeyDark}"/>
        <Setter Property="TextColor" Value="{StaticResource KeyText}"/>
    </Style>


    <Style TargetType="Button" x:Key="FuncBtn" BasedOn="{StaticResource BaseKey}">
        <Setter Property="BackgroundColor" Value="{StaticResource Func}"/>
        <Setter Property="TextColor" Value="{StaticResource FuncText}"/>
    </Style>


    <Style TargetType="Button" x:Key="OpBtn" BasedOn="{StaticResource BaseKey}">
        <Setter Property="BackgroundColor" Value="{StaticResource Op}"/>
        <Setter Property="TextColor" Value="White"/>
    </Style>


    <Style TargetType="Grid" x:Key="Keypad">
        <Setter Property="RowSpacing" Value="12"/>
        <Setter Property="ColumnSpacing" Value="12"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="BackgroundColor" Value="{StaticResource Pad}"/>
    </Style>
</ResourceDictionary>
</Application.Resources>
</Application>